# Merchant wallet configuration (REQUIRED)
# This is the address that will receive payments via x402 facilitator
MERCHANT_ADDRESS=0x0000000000000000000000000000000000000000

# Payment configuration
X402_NETWORK=base-sepolia
# For mainnet use: base
PRICE_USDC=1

# Server configuration
PORT=10001

# CORS configuration (optional)
CORS_ORIGIN=*

# Twitter API credentials (REQUIRED for tweet functionality)
# Get these from https://developer.x.com/en/portal/dashboard
# IMPORTANT: Ensure your app has "Read and Write" permissions
TWITTER_CONSUMER_KEY=your_consumer_key_here
TWITTER_CONSUMER_SECRET=your_consumer_secret_here
TWITTER_ACCESS_TOKEN=your_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_access_token_secret_here